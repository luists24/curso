body 
	background #E8E8E8
	color #444
	font-family Arial
	font-size 16px

header
	background #444
	color white
	padding 0.5em
	position relative

	.logo
		border-right 1px solid #22BCE0
		width 60px

		img
			width 52px

	.titular
		margin 0 80px 0 70px

		.publicar
			background
			color white
			float right
			font-style italic
			margin -3px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black


		.filtro
			color #22BCE0
			font-weight bold
			font-style italic
			text-decoration none
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	
	.usuario
		position absolute
		right 10px
		top 10px 
		
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%

		.flechita
			background #DD4F24
			color white
			display block
			padding 3px
			position absolute
			right 0
			top 15px
			text-align right
			width 100%


nav
	background #22BCE0

.left
	float left

.right
	float right